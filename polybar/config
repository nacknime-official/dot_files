[module/spotify]
type = custom/script
interval = 5
format-prefix = "%{T6} %{T-}"
format = <label>
exec = python ~/.config/polybar/spotify_status.py -f '{song} - {artist}'
click-left = i3-msg '[class="Spotify"] focus' &
scroll-up = python ~/.config/polybar/volume_spotify.py inc
scroll-down = python ~/.config/polybar/volume_spotify.py dec


[module/previous]
type = custom/script
interval = 10
format = "%{T3}<label>"
format-padding = 1
; Previous song icon
exec = echo ""
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"


[module/next]
type = custom/script
interval = 10
format = "%{T3}<label>"
format-padding = 1
; Next song icon
exec = echo ""
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"


[module/playpause]
type = custom/script
interval = 10
exec = echo ""
exec-if = "pgrep spotify"
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"


[module/popup-calendar]
type = custom/script
interval = 60
exec = ~/.config/polybar/popup-calendar.sh
click-left = ~/.config/polybar/popup-calendar.sh --popup &


