{
  "python.jediEnabled": true,
  "python.jediPath": "/usr/lib/python3.8/site-packages/",
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "/usr/bin/mypy",
  "python.linting.pylintEnabled": false,
  "diagnostic.refreshOnInsertMode": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/bin/black",
  "python.autoComplete.addBrackets": true,
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "python.globalModuleInstallation": true,
  "codeLens.enable": true,

  "yaml.format.bracketSpacing": true,

  "suggest.maxPreviewWidth": 100,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "●",
  "diagnostic.hintSign": "○",
  "diagnostic.enableSign": true,

  "explorer.icon.enableNerdfont": true,
  "explorer.sources": [
    { "name": "buffer", "expand": true },
    { "name": "file", "expand": true }
  ],
  "explorer.file.column.git.icon.added": "✚",
  "explorer.file.column.git.icon.deleted": "✖",
  "explorer.file.column.git.icon.renamed": "➜",
  "explorer.file.column.git.icon.unmerged": "═",
  "explorer.file.column.git.icon.untracked": "?",
  "explorer.file.column.git.icon.modified": "✹",
  "explorer.file.column.git.icon.ignored": "☒",
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"]
  },
  "git.addedSign.hlGroup": "SignifySignAdd",
  "git.changedSign.hlGroup": "SignifySignChange",
  "git.removedSign.hlGroup": "SignifySignDelete",
  "git.topRemovedSign.hlGroup": "SignifySignDelete",

  "snippets.extends": { "html": ["htmldjango"], "python": ["django"] },
  "suggest.minTriggerInputLength": 2,
  "suggest.defaultSortMethod": "alphabetical",
  "diagnostic.messageDelay": 0
}
